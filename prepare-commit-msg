#!/usr/bin/env ruby

require File.expand_path('../git_wrapper', __FILE__)
commit = GitCommit.new
asset = commit.asset_for_branch

exit unless asset
exit if commit.references? asset

File.open(ARGV[0], 'w') do |f|
  f.write commit.message.strip
  f.puts ''
  f.puts ''
  f.puts "VersionOne: #{asset}"
  f.write commit.extra_comments
end

